<div class="row border border-dark rounded shadow bg-primary justify-content-center align-items-center">

    <div class="bg-light w-100 text-primary rounded" id="compresion"></div>

    <form class="bg-dark rounded col-10 d-flex flex-wrap justify-content-center       form-group" onsubmit="return addMessage()">

        <div
            class="p-3 my-3 col-10 col-md-5 col-lg-4 text-center d-flex flex-column align-items-center justify-content-center">
            <input class="form-control" type="email" name="email" id="email" placeholder="E-mail" required><br>
            <input class="form-control" type="text" name="alias" id="alias" placeholder="Alias" required><br>
            <textarea class="form-control" rows="5" maxlength="200" id="text"
                placeholder="Tu mensaje..." required></textarea><br>
            <input type="submit" value="Enviar Msj" class="btn btn-primary" id="btnMssg">
        </div>


        <div class="col-10 col-md-10 col-lg-6 overflow-auto m-5 p-3 rounded bg-light" id="messages"
            style="height: 500px;">
        </div>

    </form>
</div>
